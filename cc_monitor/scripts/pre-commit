#!/bin/bash
# Pre-commit hook for Flutter project
# è‡ªåŠ¨æ£€æŸ¥ Flutter lint å’Œä»£ç æ ¼å¼

set -e

# é¢œè‰²å®šä¹‰
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}ğŸ” Running pre-commit checks...${NC}"

# åˆ‡æ¢åˆ° cc_monitor ç›®å½•
cd "$(git rev-parse --show-toplevel)/cc_monitor"

# æ£€æŸ¥æ˜¯å¦æœ‰ Dart æ–‡ä»¶è¢«ä¿®æ”¹
DART_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.dart$' || true)

if [ -z "$DART_FILES" ]; then
    echo -e "${GREEN}âœ“ No Dart files to check${NC}"
    exit 0
fi

echo -e "${YELLOW}ğŸ“‹ Checking Dart files:${NC}"
echo "$DART_FILES"

# 1. è¿è¡Œ dart format æ£€æŸ¥
echo -e "\n${YELLOW}ğŸ“ Checking code format...${NC}"
if ! dart format --set-exit-if-changed --output=none lib/ 2>/dev/null; then
    echo -e "${RED}âŒ Code format issues found!${NC}"
    echo -e "${YELLOW}Run 'dart format lib/' to fix formatting issues${NC}"
    exit 1
fi
echo -e "${GREEN}âœ“ Code format OK${NC}"

# 2. è¿è¡Œ flutter analyze
echo -e "\n${YELLOW}ğŸ”¬ Running Flutter analyze...${NC}"
if ! flutter analyze lib/ --no-fatal-infos; then
    echo -e "${RED}âŒ Flutter analyze found issues!${NC}"
    exit 1
fi
echo -e "${GREEN}âœ“ Flutter analyze OK${NC}"

echo -e "\n${GREEN}âœ… All pre-commit checks passed!${NC}"
